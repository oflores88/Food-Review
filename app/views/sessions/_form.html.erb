<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :user_name %>
    <%= form.text_field :user_name, id: :user_user_name %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.text_field :password, id: :user_password %>
  </div>

<!-- Do we need a password confirmation step to prevent password errors? -->
  <div class="field">
    <%= form.label :password_digest, "Password Confirmation" %>
    <%= form.password_field :password_digest %>
  </div>

  <div class="actions">
    <%= form.submit "Login", class: "btn btn-primary" %>
  </div>
<% end %>
